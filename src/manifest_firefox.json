{
  "$schema": "https://json.schemastore.org/webextension.json",
  "manifest_version": 2,
  "name": "Instagram Downloader",
  "version": "4.7.0",
  "icons": {
    "512": "icons/instagram.png"
  },
  "web_accessible_resources": [
    "icons/download_black.png",
    "icons/download_white.png",
    "icons/close_black_24_dp.svg",
    "icons/instagram.png"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "permissions": [
    "downloads",
    "tabs",
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbcdn.net/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "js/extension.js"
      ],
      "css": [
        "css/extension.css"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "HuiiBuh.InstagramDownloader@github.com"
    }
  }
}