{
  "manifest_version": 2,
  "name": "IG Downloader",
  "description": "Open Source und privacy conscious Instagram Downloader, which downloads images, videos, Instagram stories and IGTV.",
  "version": "4.6.3",
  "icons": {
    "512": "icons/instagram.png"
  },
  "web_accessible_resources": [
    "icons/download_black.png",
    "icons/download_white.png",
    "icons/close_black_24dp.svg",
    "icons/instagram.png"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "downloads",
    "tabs",
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.cdninstagram.net/*",
    "*://*.fbcdn.net/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["js/extension.js"],
      "css": ["css/extension.css"]
    }
  ]
}
